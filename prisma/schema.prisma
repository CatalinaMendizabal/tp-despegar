// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
    id    Int     @default(autoincrement()) @id
    departureAirport String
    arrivalAirport String
    departurePlace String
    arrivalPlace String
    outgoing Boolean
    price Int
    passangers Int
    tax Int
    flights Flight[]
}

enum Luggage {
    BACKPACK
    CARRY_ON
    SUITCASE
}

enum ClassType {
    ECONOMY
    FIRST
    BUSINESS
}


model Flight {
    id    Int     @default(autoincrement()) @id
    company String
    departureHour DateTime
    arrivalHour DateTime
    stopOver Flight[]
    luggage Luggage[]
    type ClassType
}








model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @default(autoincrement()) @id
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  Int?
}

